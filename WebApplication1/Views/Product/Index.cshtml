@*@model System.Data.DataTable*@
@Model WebApplication1.Models.GetProductsModel;
@{
    ViewBag.Title = "Index";
}

    <table class="table table-bordered table-striped">
        <tr>
            <th>ProductName</th>
            <th>Price</th>
            <th>Count</th>
            <th></th>
            @*<th></th>*@
        </tr>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
    <tr>
        <td>@Model.Products[i].ProductName</td>
        <td>@Model.Products[i].Price</td>
        <td>@Model.Products[i].Count</td>
        <td><a target="_blank" href="@Url.Action("Edit","Product",new { @id = Model.Products[i].ProductId })">Edit</a></td>
        @*<td><input type="button" value="View" onclick=@Html.ActionLink("ViewAlltModel","Product",Model.Rows[i]) class="btn btn-default" /></td>*@
    </tr>
        }

    </table>
<a href="@Url.Action("Create","Product")">Add Product</a>
